<%= form_for([@collection, @item]) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-4">
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name, placeholder: 'Nome do item', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :amount, 'Quantidade' %>
      <%= f.number_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit value, class: 'btn btn-success', data: { disable_with: 'Aguarde...' } %>
    <%= link_to 'Voltar', collection_items_path, class: 'btn btn-link' %>
  </div>
<% end %>
