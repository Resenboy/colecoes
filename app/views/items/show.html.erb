<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><%= link_to 'Listagem de Coleções', collections_path %></li>
  <li><%= link_to @collection.name, @collection %></li>
  <li><%= link_to 'Listagem de items', collection_items_path(@collection) %></li>
  <li class="active"><%= @item.name %></li>
</ol>

<h1><%= @item.name %></h1>

<p>
  <strong>Nome:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Quantidade:</strong>
  <%= @item.amount %>
</p>

<div class="actions">
  <%= link_to 'Editar item', edit_collection_item_path(@collection, @item), class: 'btn btn-primary' %>
  <%= link_to 'Voltar', collection_items_path(@collection), class: 'btn btn-link' %>
</div>
