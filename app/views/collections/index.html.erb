<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li class="active">Listagem de Coleções</li>
</ol>

<h1>Listagem de coleções</h1>

<table class="table table-bordered table-hover table-collections">
  <thead>
    <tr>
      <th>Nome</th>
      <th class="amount">Itens catalogados</th>
      <th class="amount">Itens adquiridos</th>
      <th class="amount">Itens faltantes</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.name, collection %></td>
        <td><%= cataloged_items(collection)%></td>
        <td><%= acquired_items(collection)%></td>
        <td><%= missing_items(collection)%></td>
        <td>
          <%= link_to fa_icon('eye'), collection %>
          <%= link_to fa_icon('edit'), edit_collection_path(collection) %>
          <%= link_to fa_icon('times'), collection, method: :delete, data: { confirm: 'Você deseja realmente excluir esta coleção?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova coleção', new_collection_path, class: 'btn btn-success' %>
